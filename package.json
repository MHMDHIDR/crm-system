  "main": "app/background.js",
  "scripts": {
    "dev": "nextron --renderer-port 3000",
    "push": "drizzle-kit push --config=renderer/drizzle.config.ts",
    "studio": "drizzle-kit studio --config=renderer/drizzle.config.ts",
    "postinstall": "electron-builder install-app-deps",
    "build": "nextron build",
    "build:mac": "nextron build --mac",
    "build:mac:universal": "nextron build --mac --universal",
    "build:linux": "nextron build --linux",
    "build:win32": "nextron build --win --ia32",
    "build:win64": "nextron build --win --x64"
  },
  "dependencies": {
