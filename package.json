    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.35.3",
    "electron-serve": "^1.3.0",
    "electron-store": "^8.2.0",
    "next-themes": "^0.3.0",
    "react-hook-form": "^7.53.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.23.8"
